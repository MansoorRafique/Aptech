<Page
    x:Class="grid_division.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:grid_division"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid x:Name="grd1" Background="Brown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".333*"></ColumnDefinition>
                <ColumnDefinition Width=".333*"></ColumnDefinition>
                <ColumnDefinition Width=".333*"></ColumnDefinition>
                <ColumnDefinition Width=".333*"></ColumnDefinition>
                <ColumnDefinition Width=".333*"></ColumnDefinition>                           
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height=".333*"></RowDefinition>
                <RowDefinition Height=".333*"></RowDefinition>
                <RowDefinition Height=".333*"></RowDefinition>

            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Grid.Column="1" HorizontalAlignment="Left" Margin="149,70,0,0" TextWrapping="Wrap" Text="INFORMATION ABOUT SOME UNIVERSITIES" VerticalAlignment="Top" Height="129" Width="508" FontSize="24" FontFamily="Hobo Std"/>
            
                <Image x:ConnectionId='2' x:Name="a" Grid.Column="1" Grid.RowSpan="2" Source="Assets/11.jpg" Height="223"                                    Margin="10,145,46,144"/>

            <TextBlock Text="SIR SYED UNIVERSITY" FontSize="20" Grid.Column="1" Grid.Row="1"
                   VerticalAlignment="Bottom" FontWeight="Bold" Margin="10,0,263,123" Grid.ColumnSpan="2"></TextBlock>
            
                <Image x:ConnectionId='3' x:Name="b" Grid.Column="2" Grid.RowSpan="2" Source="Assets/22.png"                     Margin="29,145,40,153"/>

            <TextBlock FontSize="20" Grid.Column="2" Grid.Row="1"
                   VerticalAlignment="Bottom" FontWeight="Bold" Margin="10,0,264,123" Grid.ColumnSpan="2" Text="NED UNIVERSITY"/>

            <Image x:ConnectionId='4' x:Name="c" Grid.Column="3" Grid.RowSpan="2" Source="Assets/33.jpg"                     Margin="15,145,10,160"/>

            <TextBlock Text="JINNAH SINDH MEDICAL UNIVERSITY" FontSize="20" Grid.Column="3" Grid.Row="1" Margin="15,0,195,123" 
                       VerticalAlignment="Bottom" Grid.ColumnSpan="2"></TextBlock>

            
                <Image x:ConnectionId='5' x:Name="d"  Source="Assets/44.png" Grid.Column="1" Grid.Row="1"  Grid.RowSpan="2"                     Margin="27,147,41,147"/>

            <TextBlock Text="HAMDARD UNIVERSITY" FontSize="20" Grid.Column="1" Grid.Row="2"
                       VerticalAlignment="Bottom" Margin="0,0,0,116"/>


            <Image x:ConnectionId='6' x:Name="e" Source="Assets/55.jpg" Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Width="215" Height="219"                    ></Image>
            
            <TextBlock FontSize="20" Grid.Column="2" Grid.Row="2" 
                       VerticalAlignment="Bottom" Margin="5,0,269,116" Grid.ColumnSpan="2" Height="24">
            	<Run Text="KARACHI UNIVERSITY"/>
            	<LineBreak/>
            	<Run Text=""/>
            </TextBlock>


            <Image x:ConnectionId='7' x:Name="f" Source="Assets/66.jpg" Grid.Column="3" Grid.Row="1" Grid.RowSpan="2"                     Margin="15,147,10,146"/>

            <TextBlock Text="IQRA UNIVERSITY" FontSize="20" Grid.Column="3" Grid.Row="2" 
                       VerticalAlignment="Bottom" Margin="5,0,269,116" Grid.ColumnSpan="2"></TextBlock>


        </Grid>



        <Grid x:Name="grd2" Background="Green" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".333*"></ColumnDefinition>             
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height=".333*"></RowDefinition>
                <RowDefinition Height=".333*"></RowDefinition>
            </Grid.RowDefinitions>
            <Image x:Name="img1"  Source="Assets/11.jpg" Width="300" Height="300" Grid.Column="1" Grid.Row="0" Visibility="Collapsed"></Image>
            <Image x:Name="img2" Source="Assets/22.png" Grid.Column="1" Grid.Row="0" Width="300" Height="300" Visibility="Collapsed"></Image>
            <Image x:Name="img3" Source="Assets/33.jpg" Grid.Column="1" Grid.Row="0" Width="300" Height="300" Visibility="Collapsed"></Image>
            <Image x:Name="img4" Source="Assets/44.png" Grid.Column="1" Grid.Row="0" Width="300" Height="300" Visibility="Collapsed"></Image>
            <Image x:Name="img5"  Source="Assets/55.jpg" Grid.Column="1" Grid.Row="0" Width="300" Height="300" Visibility="Collapsed"></Image>
            <Image x:Name="img6"  Source="Assets/66.jpg" Grid.Column="1" Grid.Row="0" Width="300" Height="300" Visibility="Collapsed"></Image>
            <TextBlock x:Name="txt1" Text="hi" Grid.Column="1" Grid.Row="1" FontSize="20" Margin="100,50,0,0"
                       TextWrapping="Wrap"   Visibility="Collapsed"></TextBlock>
            <Button x:ConnectionId='1' Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                  Content="Go Back" Background="Red"                       ></Button>
        </Grid>

    </Grid>
</Page>

